﻿
@model List<Blog>


@foreach (var item in Model)
{
    <div class="col-md-6 col-lg-4">
        <div class="item">
            <div class="img position-relative">
                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                    <img src="~/assets/img/@item.Image" class="img-fluid" alt="">

                </a>
                <div class="date rounded bg-light position-absolute py-1 px-2">
                    <span>@item.Date.ToString("MM.dd.yyyy")</span>
                </div>
            </div>
            <div class="text mt-3 text-center px-5">
                <h5>@item.Title</h5>
                <p class="text-black-50">
                    @item.Description
                </p>
            </div>
        </div>
    </div>
}