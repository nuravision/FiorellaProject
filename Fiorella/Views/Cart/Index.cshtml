@model CartVM


@if(Model.Total!=0){
    <div class="container mt-5 cart-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Count</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BasketProducts)
                {
                    <tr>
                        <td>
                            <img src="~/assets/img/@item.Image" style="width:100px; height:100px" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>@item.Price</td>
                        <td>@item.Count</td>
                        <td>
                            <button class="btn btn-danger btn-sm delete-basket-data" data-id="@item.Id" asp-action="DeleteProductFromBasket">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
            <h1 class="cart-total">Total:@Model.Total</h1>
        </table>
    </div>
}
else{
    <div class="container">
        <div class="alert alert-warning" role="alert">
            Cart page is empty!
        </div>
    </div>
}

