@model BlogEditVM

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Edit">
        <div class="form-group">
            <label>Blog</label>
            <input asp-for="Title" type="text" class="form-control" placeholder="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
            <input asp-for="Description" type="text" class="form-control" placeholder="Description"/>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>