@model ProductEditVM
<div class="container mt-5">
    <h3 class="text-center text-success">Edit Product</h3>
    <div class="product-images row mt-3 " style="gap:10px">
       @foreach(var item in Model.ExistImage){
           <div class="product-item delete-image" style="position:relative">
                <img class="@(item.IsMain ? "product-main-image" : "")" src="~/assets/img/@item.Image" style="width:150px; height:150px" />
                @if(!item.IsMain){
                    <button class="btn btn-danger btn-sm delete-image-btn" style="position:absolute;top:60px;left:42px;opacity:0" data-image-id="@item.Id" data-product-id="@item.ProductId">Delete</button>
                }
            </div>
       }
    </div>
    <form class="forms-sample mt-3" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">

            <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>


            <input asp-for="Price" type="number" step="any" min="0" class="form-control mt-4" placeholder="Price" />
            <span class="text-danger" asp-validation-for="Price"></span>

            <label class="mt-4">Category</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories">
            </select>


            <label class="mt-4">Images</label>
            <input asp-for="NewImages" class="form-control" />
            <span class="text-danger" asp-validation-for="NewImages"></span>



        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>