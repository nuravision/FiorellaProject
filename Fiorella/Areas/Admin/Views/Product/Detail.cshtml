@model ProductDetailVM


<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-6">
                <div class="border rounded-4 mb-3 d-flex justify-content-center">
                    <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="https://mdbcdn.b-cdn.net/img/bootstrap-ecommerce/items/detail1/big.webp">
                        <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="~/assets/img/@Model.Images.FirstOrDefault(m=>m.IsMain).Image" />
                    </a>
                </div>
                <div class="d-flex justify-content-center mb-3">
                   
                    @foreach(var item in Model.Images.Where(m=>!m.IsMain)){
                         <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" class="item-thumb">
                            <img width="60" height="60" class="rounded-2" src="~/assets/img/@item.Image" />
                    </a>
                    }
                </div>
                <!-- thumbs-wrap.// -->
                <!-- gallery-wrap .end// -->
            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h4 class="title text-dark">
                        @Model.Name
                    </h4>
                    

                    <div class="mb-3">
                        <span class="h5">$@Model.Price</span>
                        
                    </div>


                    <div class="row">
                        <dt class="col-3">Category:</dt>
                        <dd class="col-9">@Model.Category</dd>

                    </div>
                    <a asp-action="Index" class="btn btn-primary text-white">Back</a>
                </div>
            </main>
        </div>
    </div>
</section>

